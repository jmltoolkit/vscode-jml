{
    "name": "jml-vscode",
    "displayName": "jml-vscode",
    "description": "VS Code support for Java Modelling Language",
    "version": "0.3.0",
    "publisher": "wadoon",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "url": "http://github.com/wadoon/jml-vscode",
        "type": "git"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {        
        "semanticTokenScopes": [
            {
                "id": "jmlmodifier",
                "superType": "other",
                "description": "JML Modifier"
            },
            {
                "scopes": {
                    "jmlmodifier": [
                        "storage.modifier.java"
                    ]
                }
            }
        ]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:java"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "antlr4ts": "antlr4ts src/JML.g4"
    },
    "devDependencies": {
        "@types/antlr4": "^4.7.2",
        "@types/node": "^7.10.14",
        "@types/vscode": "^1.68.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "tslint": "^5.20.1",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "antlr4": "^4.10.1",
        "antlr4ts": "^0.5.0-alpha.4"
    }
}