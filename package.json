{
    "name": "jml-vscode",
    "displayName": "jml-vscode",
    "description": "VS Code support for Java Modelling Language",
    "version": "0.3.0",
    "publisher": "wadoon",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "url": "http://github.com/wadoon/jml-vscode",
        "type": "git"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "java",
                "aliases": [
                    "Java+JML",
                    "java"
                ],
                "extensions": [
                    ".java"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "java",
                "scopeName": "source.java",
                "path": "./syntaxes/java.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:java"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^7.10.14",
        "@types/vscode": "^1.52.0",
        "tslint": "^5.20.1",
        "typescript": "^3.9.7"
    }
}
